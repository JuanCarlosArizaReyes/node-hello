pipeline {
  agent any
  environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-hub-juanariza123')
  }
  stages {
    stage('Pull') {
        steps {
            // Get some code from a GitHub repository
            git branch: 'main', url: 'https://github.com/JuanCarlosArizaReyes/node-hello.git'
        }
        post {
            {
               sh 'echo Success'
            }
        }
    }
    stage('Build') {
      steps {
        sh 'docker build -t JuanCarlosArizaReyes/frontend:sod .'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push JuanCarlosArizaReyes/frontend:sod'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
